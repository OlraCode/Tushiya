{% extends 'base.html.twig' %}

{% block title %}Análise de Cursos{% endblock %}

{% block body %}
    
    <h1>Análise de Cursos</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Imagem</th>
                <th>Título</th>
                <th>Descrição</th>
                <th>Categoria</th>
                <th>Professor</th>
                <th>Preço</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td><img src="{{ asset('upload/coverImages/' ~ course.image) }}" alt="Capa" style="width: 120px"></td>
                <td>{{ course.title }}</td>
                <td>{{ course.description }}</td>
                <td>{{ course.category }}</td>
                <td>{{ course.teacher.name }}</td>
                <td>{{ course.price }}</td>
                <td>
                    <div class="d-flex">

                            <a href="{{ path('app_course_show', {'id': course.id}) }}" class="btn btn-dark me-2">Detalhes</a>

                            <form action="{{ path('app_course_approve', {'id': course.id}) }}" method="POST">
                                <button type="submit" class="btn btn-success me-2">Aceitar</button>
                            </form>

                            <form action="{{ path('app_course_refuse', {'id': course.id}) }}" method="POST">
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop{{ course.id }}">Recusar</button>

                                <!-- Modal -->
                                <div class="modal fade" id="staticBackdrop{{ course.id }}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel{{ course.id }}" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="staticBackdropLabel{{ course.id }}">Recusar Curso</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body m-3">
                                        <label for="refuse{{ course.id }}" class="form-label">Digite o motivo da recusa</label>
                                        <textarea type="area" maxlength="120" rows="3" class="form-control" id="refuse{{ course.id }}" name="message" required></textarea>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                                        <button type="submit" class="btn btn-primary">Enviar</button>
                                    </div>
                                    </div>
                                </div>
                                </div>
                            </form>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Nenhum curso encontrado</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
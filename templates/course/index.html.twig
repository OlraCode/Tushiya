{% extends 'base.html.twig' %}

{% block title %}Course index{% endblock %}

{% block body %}

    <link rel="stylesheet" href={{asset('css/course.css')}}>

    <h1>Catálogo de Cursos</h1>

    {% if is_granted('ROLE_TEACHER') %}
        <a href="{{ path('app_course_new') }}" class="btn btn-primary my-2">Adicionar Novo</a>
    {% endif %}

    <form action="{{ path('app_course_index') }}" class="filter-form d-flex">
        <div class="select-container">
            <select class="form-select my-1 me-1 d-inline" style="width: 250px" aria-label="Default select example" name="category">
                <option selected value="">Filtrar por categoria</option>
                {% for category in categories %}
                    <option value="{{ category.slug }}">{{ category.name }}</option>
                {% endfor %}
            </select>
            <select class="form-select my-1 me-1 d-inline" style="width: 250px;" aria-label="Default select example" name="order">
                <option selected value="">Ordenar por:</option>
                <option value="id">Mais recente</option>
                <option value="title">Título</option>
                <option value="price">Preço</option>
            </select>
        </div>

        <button class="btn rounded-circle p-2 mx-2 border search" type="submit"><img src="{{ asset('img/search.png') }}" alt="Buscar" style="width: 25px"></button>
    </form>

        <div class="container d-flex flex-wrap gap-4 mt-3 course-container">
            {% for course in courses %}
                <a class="card course-card" style="width: 18rem;" href="{{ path('app_course_show', {id: course.id}) }}">
                    <img src="{{ asset('upload/coverImages/' ~ course.image) }}" class="card-img-top" style="height: 200px">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ course.title }}</h5>
                        <p class="card-text mb-1">{{ course.teacher.name }}</p>
                        <p class="card-text fs-5 fw-bold">R${{ course.price | number_format(2, ',', '.') }}</p>
                        {% if is_granted('ROLE_USER') %}
                            {% if course.teacher != app.user %}
                                {% if course in cart %}
                                    <form action="{{ path('app_cart_delete', {'id': course.id}) }}" method="POST" class="mt-auto d-flex flex-column">
                                        <button type="submit" class="btn btn-outline-danger me-2">Remover do carrinho</button>
                                    </form>
                                {% else %}
                                    <form action="{{ path('app_cart_new', {'id': course.id}) }}" method="POST" class="mt-auto d-flex flex-column">
                                        <button type="submit" class="btn btn-success me-2">Adicionar ao carrinho</button>
                                    </form>
                                {% endif %}
                            {% else %}
                                <form action="{{ path('app_course_edit', {'id': course.id}) }}" class="mt-auto d-flex flex-column">
                                    <button type="submit" class="btn btn-warning">Editar</button>
                                </form>
                            {% endif %}
                        {% endif %}
                    </div>
                </a>
            {% else %}
                <h3 colspan="7">Nenhum curso encontrado</h3>
            {% endfor %}
        </div>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <h1>Course</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ course.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ course.description }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ course.category }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ course.image }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ course.price }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex g-2">
        {% if isInCart %}
            <form action="{{ path('app_cart_delete', {'id': course.id}) }}" method="POST">
                <button type="submit" class="btn btn-outline-danger me-2">Remover do carrinho</button>
            </form>
        {% else %}
            <form action="{{ path('app_cart_new', {'id': course.id}) }}" method="POST">
                <button type="submit" class="btn btn-success me-2">Adicionar ao carrinho</button>
            </form>
        {% endif %}

        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_course_edit', {'id': course.id}) }}" class="btn btn-warning me-2">Editar</a>
            {{ include('course/_delete_form.html.twig') }}
        {% endif %}

        <a href="{{ path('app_course_index') }}" class="btn btn-dark ms-3">Voltar ao cat√°logo</a>
    </div>

{% endblock %}

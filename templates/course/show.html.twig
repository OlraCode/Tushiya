{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <h1>Course</h1>

    {% if course.refuseMessage %}
        <div class="alert alert-warning">
        <p>Seu curso foi recusado por:</p>
        <h3 class="fs-5">{{ course.refuseMessage }}</h3>
        <small>Edite para poder reenvia-lo a avaliação</small>

        </div>
    {% endif %}

    <img src="{{ asset('upload/coverImages/' ~ course.image) }}" alt="Capa" style="width: 250px" class="my-3">

    <table class="table">
        <tbody>
            <tr>
                <th>Título</th>
                <td>{{ course.title }}</td>
            </tr>
            <tr>
                <th>Descrição</th>
                <td>{{ course.description }}</td>
            </tr>
            <tr>
                <th>Categoria</th>
                <td class="d-flex gap-2 flex-wrap">
                  {% for category in course.categories %}
                    <div class="badge text-bg-dark" style="width: 200px">{{ category.name }}</div>
                  {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Preço</th>
                <td>{{ course.price }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex g-2">
        {% if course.isVerified and course.teacher != app.user %}
            {% if isInCart %}
                <form action="{{ path('app_cart_delete', {'id': course.id}) }}" method="POST">
                    <button type="submit" class="btn btn-outline-danger me-2">Remover do carrinho</button>
                </form>
            {% else %}
                <form action="{{ path('app_cart_new', {'id': course.id}) }}" method="POST">
                    <button type="submit" class="btn btn-success me-2">Adicionar ao carrinho</button>
                </form>
            {% endif %}
        {% endif %}

        {% if is_granted('ROLE_ADMIN') or course.teacher == app.user %}
            <a href="{{ path('app_course_edit', {'id': course.id}) }}" class="btn btn-warning me-2">Editar</a>
            {{ include('course/_delete_form.html.twig') }}
        {% endif %}

        <a href="{{ path('app_course_index') }}" class="btn btn-dark ms-3">Voltar ao catálogo</a>
    </div>

{% endblock %}

{{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.description) }}

    {{ form_label(form.category) }}
    {{ form_errors(form.category) }}
    <div class="dropdown mb-3">

        <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownCategories" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="false">
            Selecionar Categorias
        </button>

        <ul class="dropdown-menu p-2" aria-labelledby="dropdownCategories" style="max-height: 200px; overflow-y: auto;">
            {% for child in form.category %}
            <li>
                <div class="form-check">
                {{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(child, null, {'label_attr': {'class': 'form-check-label'}}) }}
                </div>
            </li>
            {% endfor %}
        </ul>
    </div>

{{ form_rest(form) }}
    <button class="btn btn-success">{{ button_label|default('Salvar') }}</button>
{{ form_end(form) }}